          "required": [
            "tabId",
            "format"
          ],
          "additionalProperties": false,
          "$schema": "http://json-schema.org/draft-07/schema#"
        }
      },
      {
        "name": "brop_execute_script",
        "toolReferenceName": "brop_execute_script",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_execute_script",
        "displayName": "brop_execute_script (brop-mcp)",
