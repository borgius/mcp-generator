        "mcpServer": "brop-mcp",
        "mcpTool": "cdp_create_page",
        "displayName": "cdp_create_page (brop-mcp)",
        "modelDescription": "Create a new page using CDP and attach to it",
        "userDescription": "Create a new page using CDP and attach to it",
