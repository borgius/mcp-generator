{
  "name": "mcp-generator",
  "displayName": "MCP Generator",
  "description": "Generate VS Code language model tools from embedded MCP config",
  "version": "0.0.1",
  "publisher": "borgius",
  "repository": {
    "type": "git",
    "url": "https://github.com/borgius/mcp-generator.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languageModelTools": [
      {
        "name": "mock_echo",
        "toolReferenceName": "mock_echo",
        "mcpServer": "mock-mcp",
        "mcpTool": "mock_echo",
        "displayName": "mock_echo (mock-mcp)",
        "modelDescription": "Echo back the provided message",
        "userDescription": "Echo back the provided message",
        "canBeReferencedInPrompt": true,
        "tags": [
          "mcp",
          "mock-mcp"
        ],
        "icon": "$(tools)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            }
          },
          "required": [
            "message"
          ],
          "additionalProperties": false
        }
      },
      {
        "name": "mock_sum",
        "toolReferenceName": "mock_sum",
        "mcpServer": "mock-mcp",
        "mcpTool": "mock_sum",
        "displayName": "mock_sum (mock-mcp)",
        "modelDescription": "Sum two numbers",
        "userDescription": "Sum two numbers",
        "canBeReferencedInPrompt": true,
        "tags": [
          "mcp",
          "mock-mcp"
        ],
        "icon": "$(tools)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "a": {
              "type": "number"
            },
            "b": {
              "type": "number"
            }
          },
          "required": [
            "a",
            "b"
          ],
          "additionalProperties": false
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "publish": "vsce publish",
    "update-tools": "vite-node src/update-tools.ts",
    "init-extension": "vite-node scripts/init-extension.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite-node": "^5.2.0"
  }
}
