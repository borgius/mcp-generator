      },
      {
        "name": "brop_start_console_capture",
        "toolReferenceName": "brop_start_console_capture",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_start_console_capture",
        "displayName": "brop_start_console_capture (brop-mcp)",
        "modelDescription": "Start capturing console logs for a tab using Chrome Debugger API",
        "userDescription": "Start capturing console logs for a tab using Chrome Debugger API",
        "canBeReferencedInPrompt": true,
        "tags": [
          "mcp",
          "brop-mcp"
        ],
        "icon": "$(tools)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "tabId": {
              "type": "number",
              "description": "Tab ID to start capturing logs from"
            }
          },
          "required": [
            "tabId"
          ],
          "additionalProperties": false,
          "$schema": "http://json-schema.org/draft-07/schema#"
        }
      },
      {
        "name": "brop_get_console_logs",
        "toolReferenceName": "brop_get_console_logs",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_get_console_logs",
        "displayName": "brop_get_console_logs (brop-mcp)",
        "modelDescription": "Retrieve console logs captured since capture was started (requires active capture session)",
        "userDescription": "Retrieve console logs captured since capture was started (requires active capture session)",
        "canBeReferencedInPrompt": true,
        "tags": [
          "mcp",
          "brop-mcp"
        ],
        "icon": "$(tools)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "tabId": {
              "type": "number",
              "description": "Tab ID to get logs from"
            },
            "limit": {
              "type": "number",
              "description": "Maximum logs to return (default: all captured)"
            },
            "level": {
              "type": "string",
              "enum": [
                "log",
                "warn",
                "error",
                "info",
                "debug"
              ],
              "description": "Filter by log level"
            }
          },
          "required": [
            "tabId"
          ],
          "additionalProperties": false,
          "$schema": "http://json-schema.org/draft-07/schema#"
        }
      },
      {
        "name": "brop_clear_console_logs",
        "toolReferenceName": "brop_clear_console_logs",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_clear_console_logs",
        "displayName": "brop_clear_console_logs (brop-mcp)",
        "modelDescription": "Clear captured console logs without stopping the capture session",
        "userDescription": "Clear captured console logs without stopping the capture session",
