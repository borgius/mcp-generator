        "toolReferenceName": "brop_get_simplified_content",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_get_simplified_content",
        "displayName": "brop_get_simplified_content (brop-mcp)",
        "modelDescription": "Get simplified and cleaned page content in HTML or Markdown format",
        "userDescription": "Get simplified and cleaned page content in HTML or Markdown format",
        "canBeReferencedInPrompt": true,
        "tags": [
          "mcp",
          "brop-mcp"
        ],
