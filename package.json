      {
        "name": "brop_get_server_status",
        "toolReferenceName": "brop_get_server_status",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_get_server_status",
        "displayName": "brop_get_server_status (brop-mcp)",
        "modelDescription": "Get BROP server status and connection info",
        "userDescription": "Get BROP server status and connection info",
