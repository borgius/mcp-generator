        "name": "brop_list_tabs",
        "toolReferenceName": "brop_list_tabs",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_list_tabs",
        "displayName": "brop_list_tabs (brop-mcp)",
        "modelDescription": "List all open browser tabs",
        "userDescription": "List all open browser tabs",
        "canBeReferencedInPrompt": true,
        "tags": [
          "mcp",
          "brop-mcp"
        ],
        "icon": "$(tools)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "windowId": {
              "type": "number",
              "description": "Optional window ID to filter tabs (if not provided, lists tabs from all windows)"
            },
            "includeContent": {
              "type": "boolean",
              "description": "Whether to include page content in the response (defaults to false)"
            }
          },
          "additionalProperties": false,
          "$schema": "http://json-schema.org/draft-07/schema#"
        }
      },
      {
        "name": "brop_activate_tab",
        "toolReferenceName": "brop_activate_tab",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_activate_tab",
        "displayName": "brop_activate_tab (brop-mcp)",
        "modelDescription": "Switch to/activate a specific browser tab",
        "userDescription": "Switch to/activate a specific browser tab",
        "canBeReferencedInPrompt": true,
        "tags": [
          "mcp",
          "brop-mcp"
        ],
        "icon": "$(tools)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "tabId": {
              "type": "number",
              "description": "ID of the tab to activate"
            }
          },
          "required": [
            "tabId"
          ],
          "additionalProperties": false,
          "$schema": "http://json-schema.org/draft-07/schema#"
        }
