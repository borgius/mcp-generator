{
  "name": "mcp-generator",
  "displayName": "MCP Generator",
  "description": "Generate VS Code language model tools from embedded MCP config",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languageModelTools": [
      {
        "name": "brop_navigate",
        "toolReferenceName": "brop_navigate",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_navigate",
        "displayName": "brop_navigate (brop-mcp)",
        "modelDescription": "Navigate to a URL in the browser",
        "userDescription": "Navigate to a URL in the browser",
        "canBeReferencedInPrompt": true,
        "tags": [
          "mcp",
          "brop-mcp"
        ],
        "icon": "$(tools)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "description": "URL to navigate to"
            },
            "tabId": {
              "type": "number",
              "description": "Optional tab ID to navigate in"
            }
          },
          "required": [
            "url"
          ],
          "additionalProperties": false,
          "$schema": "http://json-schema.org/draft-07/schema#"
        }
      },
      {
        "name": "brop_get_page_content",
        "toolReferenceName": "brop_get_page_content",
        "mcpServer": "brop-mcp",
        "mcpTool": "brop_get_page_content",
        "displayName": "brop_get_page_content (brop-mcp)",
        "modelDescription": "Get basic page content from the browser (raw HTML and text)",
        "userDescription": "Get basic page content from the browser (raw HTML and text)",
        "canBeReferencedInPrompt": true,
        "tags": [
          "mcp",
          "brop-mcp"
